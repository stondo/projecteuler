{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "no-var-requires": false,
        "ordered-imports": false,
        "trailing-comma": false,
        "no-console": false,
        "object-literal-sort-keys": false,
        "no-string-literal": false,
        "one-variable-per-declaration": false,
        "no-trailing-whitespace": true,
        "whitespace": [
            true,
            "check-branch",
            "check-operator",
            "check-type-operator",
            "check-typecast",
            "check-module",
            "check-decl",
            "check-type"
        ]
    },
    "rulesDirectory": []
}